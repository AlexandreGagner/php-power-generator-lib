{% extends "layout.html" %}

{% block title %}Connexion wHosting{% endblock %}

{% block content %}
<section class="ui container" style="padding-top: 10%; width: 42rem;">
    {{Messages()|raw}}
    <article class="ui segment flat" {#style="display: none;"#}>
        {#<a style="color: #ecf0f1; position: absolute; left: 0.5rem; font-size: 1rem;" href="/"><i class="left arrow icon link"></i>Retour</a>#}
        <h1 class="ui center aligned top header">Connexion</h1>
        <form class="ui form" id="login-form" method="post" action="{{GET_URL('login')}}{% if get.n %}?n={{get.n}}{% endif %}">
            <div class="required field">
                <label>Nom d'utilisateur</label>
                <div class="ui left icon input">
                    <input type="text" name="login" placeholder="Nom d'utilisateur" value="{{post.login}}">
                    <i class="user icon"></i>
                </div>
            </div>
            <div class="required field">
                <label>Mot de passe</label>
                <div class="ui left icon input">
                    <input type="password" name="password" placeholder="Mot de passe">
                    <i class="lock icon"></i>
                </div>
            </div>
            <div class="field">
                <div class="ui checkbox">
                    <input name="remeberme" type="checkbox">
                    <label>Rester connect√©</label>
                </div>
            </div>

            <button type="submit" class="ui labeled icon button fluid blue"><i class="magic icon"></i>Connexion</button>
            <div id="loader" class="ui dimmer">
                <div class="ui loader"></div>
            </div>
        </form>
        <div class="ui divider"></div>
        <p class="center">Administration wHosting &copy; {{ "now"|date("Y") }}</p>
    </article>
</section>
{% endblock %}

{% block script %}
<script>
$(function() {
    $('.ui.checkbox').checkbox();
    $('#login-form').submit(function(event){
        $('#loader').addClass('active');
    })
    {% if post.login %}
    $('#login-form input[name=password]').focus();
    {% endif %}
});
</script>
{% endblock %}